objective 'Stress', ->

    words = require('fs').readFileSync(__dirname + '/words').toString().split('\r\n')
    
    randomWord = -> words[Math.floor(words.length * Math.random())]
        
    randomSentence = -> "#{randomWord()} #{randomWord()} #{randomWord()} #{randomWord()} #{randomWord()} #{randomWord()} #{randomWord()}"

    context 'random', ->

        [0..10].forEach ->

            context randomSentence(), ->

                [0..10].forEach ->

                    context randomSentence(), ->

                        [0..10].forEach ->

                            it randomSentence(), (done) ->

                                if Math.random() < 0.5

                                    return done new Error 'Fail test'

                                done()
